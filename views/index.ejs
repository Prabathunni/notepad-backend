<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

</head>

<body>

    <div class="main w-full min-h-screen bg-gray-700">
        <div class="form w-100 p-10 text-white">
            <form action="/create" method="POST">
                <input class="bg-gray-500 w-100 py-4 px-3 rounded" type="text" placeholder="Enter Task" name="title">
                <textarea placeholder="enter content here" class="rounded bg-gray-500 px-3 w-100 py-5 mt-2 resize-none" name="details"></textarea>
                <input type="submit" class="bg-blue-500 px-6 py-2 rounded-md cursor-pointer">
            </form>
        </div>



        <div class="task p-10 flex gap-3 flex-wrap">

            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>

                    <div class="p-5 w-60 bg-gray-600  text-white rounded-md">
                        <h1 class="text-2xl"> <%= val %> </h1>

                        <div class="flex justify-between mt-3 items-center">
                        <a class="text-blue-200 cursor-pointer" href="/showfile/<%= val %>"> click for more </a>
                        <a href="/edit/<%= val %>" class="text-red-600">Edit filename</a>
                        </div>

                    </div>

                    <% }) %>
                        <% } else{ %>
                                <h1 class="text-white">No task yet</h1>
                            <% } %>



        </div>
    </div>

    <script src="/javascripts/scripts.js"></script>
</body>

</html>